<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://code.alibabatech.com/schema/dubbo
          http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

  <dubbo:application name="weixin-service-admin"/>

  <dubbo:registry id="zk1" address="${weixin.dubbo.reistry.address}" protocol="zookeeper"/> <!-- 注意要关闭防火墙 -->

  <dubbo:protocol id="mydubbo" name="dubbo" port="20886"/>
  <!--还有一种方法：就是dubbo provider xml文件的注册配置增加host配置。如下-->
  <!--<dubbo:protocol name="dubbo" host="192.168.60.80" port="20880" />-->
  <dubbo:provider registry="zk1" protocol="mydubbo"/>

  <dubbo:service interface="com.cheng.weixin.rpc.admin.service.RpcAdminService" ref="adminService"/>

</beans>
