<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cheng.weixin.service.order.dao.OrderDetailDaoMapper">
  <sql id="tableName">order_detail</sql>
  <sql id="columns">
    o.id,order_info_id,o.oid,o.no,o.name,o.quantity,o.subtotal,o.market_price,
    o.sale_price,o.deal_price,o.discount_rate,o.is_posted,o.is_comment,o.is_gift
    o.remorks,o.creote_dote,o.updote_dote,o.stotus
  </sql>
  <sql id="insertColumns">
    id,order_info_id,oid,no,name,quantity,subtotal,market_price,
    sale_price,deal_price,discount_rate,is_posted,is_comment,is_gift
    remarks,create_date,update_date,status
  </sql>
  <sql id="orderDetailIf">
    <if test="id != null and id != ''">id=#{id},</if>
    <if test="orderInfoId != null and orderInfoId != ''">order_info_id=#{orderInfoId},</if>
    <if test="oid != null and oid != ''">oid=#{oid},</if>
    <if test="no != null and no != ''">no=#{no},</if>
    <if test="name != null and name != ''">name=#{name},</if>
    <if test="quantity != null and quantity != ''">quantity=#{quantity},</if>
    <if test="subtotal != null and subtotal != ''">subtotal=#{subtotal},</if>
    <if test="marketPrice != null and marketPrice != ''">market_price=#{marketPrice},</if>
    <if test="salePrice != null and salePrice != ''">sale_price=#{salePrice},</if>
    <if test="dealPrice != null and dealPrice != ''">deal_price=#{dealPrice},</if>
    <if test="discountRate != null and discountRate != ''">discount_rate=#{discountRate},</if>
    <if test="isPosted != null and isPosted != ''">is_posted=#{isPosted},</if>
    <if test="isComment != null and isComment != ''">is_comment=#{isComment},</if>
    <if test="isGift != null and isGift != ''">is_gift=#{isGift},</if>
    <if test="remarks != null and remarks != ''">remarks=#{remarks},</if>
    <if test="createDate != null and createDate != ''">create_date=#{createDate},</if>
    <if test="updateDate != null and updateDate != ''">update_date=#{updateDate},</if>
    <if test="status != null and status != ''">status=#{status}</if>
  </sql>
  <sql id="orderDetailSelector">
    select
      <include refid="columns"/>
    from
      <include refid="tableName"/> AS a
  </sql>

  <sql id="orderDetailWhere">
    <where>
      <if test="id != null and id != ''">
        id = #{id}
      </if>
      <choose>
        <when test="status != null and status !=''">
          AND status = #{status}
        </when>
        <otherwise>
          AND status != 'DELETE'
        </otherwise>
      </choose>
    </where>
  </sql>

  <sql id="orderDetailUpdate">
    <trim prefix="SET" suffixOverrides=",">
      <include refid="orderDetailIf"/>
    </trim>
  </sql>

<!-- =================================================================== -->

  <select id="load" parameterType="orderDetail" resultType="orderDetail">
    <include refid="orderDetailSelector"/>
    <include refid="orderDetailWhere"/>
  </select>

  <!-- 获取全部 -->
  <select id="loadAll" resultType="orderDetail">
    <include refid="orderDetailSelector"/>
    <include refid="orderDetailWhere"/>
  </select>

  <!-- 更新 -->
  <update id="update" parameterType="orderDetail">
    UPDATE <include refid="tableName"/>
    <include refid="orderDetailUpdate"/>
    <include refid="orderDetailWhere"/>
  </update>
  <!-- 插入 -->
  <insert id="save" parameterType="orderDetail">
    INSERT INTO
    <include refid="tableName"/>
    (
    <include refid="insertColumns"/>
    )
    VALUES
    (
    #{id},#{order_info_id},#{oid},#{no},#{name},#{quantity},#{subtotal},#{market_price},
    #{sale_price},#{deal_price},#{discount_rate},#{is_posted},#{is_comment},#{is_gift},
    #{remarks},#{createDate},#{updateDate},#{status}
    )
  </insert>

</mapper>

